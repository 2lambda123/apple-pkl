local function gradle(args: String): StepConfig = new {
  run {
    name = "gradle \(args)"
    command = """
      export PATH=~/staticdeps/bin:$PATH
      export JAVA_HOME=~/jdk
      ./gradlew \(gradleArgs) \(args)
      """
  }
}
