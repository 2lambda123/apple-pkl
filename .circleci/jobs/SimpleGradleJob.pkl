extends "GradleJob.pkl"

import "../CircleCI.pkl"

name: String = command

command: String

steps {
  new CircleCI.RunStep {
    name = module.name
    command = """
      ./gradlew \(module.gradleArgs) \(module.command)
      """
  }
}

job {
  docker {
    new { image = "cimg/openjdk:11.0" }
  }
}
